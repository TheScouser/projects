<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.elsys.themp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.STORAGE" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.elsys.themp.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.elsys.themp.PlayListActivity" >
        </activity>
        <activity android:name="org.elsys.themp.VideoPlayer" >
        </activity>
        <activity
            android:name="org.elsys.themp.PlayListView"
            android:label="@string/title_activity_play_list_view" >
        </activity>
        <activity
            android:name="org.elsys.themp.FilesExplorer"
            android:label="@string/title_activity_files_explorer" >
        </activity>
        <activity android:name="org.elsys.themp.VideoStoredInSDCard" >
        </activity>
        <activity
            android:name="org.elsys.themp.EnterName"
            android:label="@string/title_activity_enter_name"
            android:theme="@android:style/Theme.Translucent" >
        </activity>
        <activity
            android:name="org.elsys.themp.PlayListEdit"
            android:label="@string/title_activity_play_list_edit" >
        </activity>
    </application>

</manifest>